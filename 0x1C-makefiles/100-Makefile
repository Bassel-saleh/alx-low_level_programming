CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f
REMV := $(RM)
CFLAGS := -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(REMV) *~ $(NAME)
oclean:
	$(REMV) $(OBJ)
fclean: clean oclean
re: fclean all